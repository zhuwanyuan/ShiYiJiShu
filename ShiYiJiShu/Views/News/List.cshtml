@model ShiYiJiShu.Models.NewsListModel
@{
    ViewBag.Title = Model.ClassName + " - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt15">
    <div class="left">

        @if (Model.ParentClassID == 139 || Model.ParentClassID == 140)
        {
            @Html.Action("GetShiYiJiShuMenuPartial", "News", new { currentClassID = Model.ClassID })
        }
        else
        {
            @Html.Partial("_LeftMenuPartial")
        }


    </div>

    <div class="colmain">
        <div class="list">
            <div class="titlebg"><h2>@Model.ClassName</h2> <span>@*<img src="~/Images/icon-home.png" />*@当前位置：首页 > @Model.ClassName</span> </div>

            <ul>
                @foreach (var news in Model.List)
                {
                    <li><span class="tt">- <a href="~/News/Detail/@news.NewsID" title="@news.NewsTitle" target="_blank">@news.NewsTitle</a>  @if (news.ZhiDing == 1)
                    {@Html.Raw(" ")}</span><span class="date">@Convert.ToDateTime(news.CreateDate).ToString("yyyy-MM-dd")</span></li>
                }
            </ul>

            <div class="clear"></div>
            <div class="pagelink">@Html.Raw(Model.PageLink)</div>
        </div>

       
    </div>
    <div class="clear"></div>
</div>
