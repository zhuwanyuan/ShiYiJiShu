                <div class="layui-input-block">
                    <button class="layui-btn layui-btn-danger" onclick="add('@Model.ProjectID')">提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary" onclick="closePanel()">取消</button>
                </div>
