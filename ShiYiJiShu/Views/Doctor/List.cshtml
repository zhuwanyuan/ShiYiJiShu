@model ShiYiJiShu.Models.DoctorListModel
@{
    ViewBag.Title = Model.ClassName + " - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt15">
    <div class="left">
        @Html.Action("DoctorLeftMenu", new { currentClassID = Model.ClassID })
    </div>

    <div class="colmain">
        <div class="titlebg"><h2>@Model.ClassName</h2> <span>当前位置：@Model.ParentClassName > @Model.ClassName</span></div>
  
        <div class="doctorlist">
 
            <ul>
                @foreach (var doctor in Model.DoctorList)
                {
                    <li>
                        <div class="pic">

                            <a href="/Doctor/Detail/@doctor.DoctorID" title="@doctor.DoctorName" target="_blank">
                                <img src="~/UploadPic/@doctor.DoctorPic" width="115" height="150" />
                            </a>
                        </div>
                       
                        <div class="docintro"> 
                            
                            <div class="doclabel">专家姓名：</div> 
                            <div class="doctext">
                                <div class="dname"><span><b>@doctor.DoctorName</b></span> (@if(doctor.DoctorType==1){ @Html.Raw("首席专家") } else if(doctor.DoctorType == 2){ @Html.Raw("特邀专家") }) </div>
                            </div>
                            <div class="doclabel">专家职称：</div><div class="doczhicheng">@doctor.DoctorJobTitle</div> 
                            <div class="doclabel">单位职务：</div><div class="doczhiwu">@doctor.DoctorCompany</div> 
                            <div class="clear"></div>
                            <div class="dmore"><a href="/Doctor/Detail/@doctor.DoctorID">查看更多++</a></div>
                        </div>
                        <div class="clear"></div>
                    </li>
                }
            </ul>

            <div class="clear"></div>
            <div class="pagelink">@Html.Raw(Model.PageLink)</div>
        </div>

       
    </div>

    <div class="clear"></div>
</div>


